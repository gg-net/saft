<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.ggnet.saft.gluon.sample.InfoPresenter">
   <center>
      <Accordion maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
        <panes>
          <TitledPane text="First">
            <content>
                  <BorderPane>
                     <center>
                        <Label fx:id="clazzLabel" text="Label" />
                     </center>
                  </BorderPane>
            </content>
          </TitledPane>
          <TitledPane text="Second">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </TitledPane>
          <TitledPane text="Third">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </TitledPane>
        </panes>
      </Accordion>
   </center>
   <bottom>
      <Button mnemonicParsing="false" onAction="#clickClose" text="Close" BorderPane.alignment="CENTER" />
   </bottom>
</BorderPane>
